<?xml version="1.0" encoding="UTF-8"?>
<jboss-web>
    <valve>
        <class-name>eu.scape_project.planning.jboss.util.UTF8EncodingValve
        </class-name>
    </valve>
    <security-domain>idp</security-domain>
    <context-root>idp</context-root>
    <valve>
        <class-name>org.picketlink.identity.federation.bindings.tomcat.idp.IDPWebBrowserSSOValve
        </class-name>
        <param>
            <param-name>signOutgoingMessages</param-name>
            <param-value>false</param-value>
        </param>
        <param>
            <param-name>ignoreIncomingSignatures</param-name>
            <param-value>true</param-value>
        </param>
        <param>
            <param-name>ignoreAttributesGeneration</param-name>
            <param-value>false</param-value>
        </param>
        <param>
            <param-name>attributeList</param-name>
            <param-value>username,firstName,lastName,email,userRoles
            </param-value>
        </param>
    </valve>
</jboss-web>